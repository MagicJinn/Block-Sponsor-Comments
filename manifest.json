{
    "manifest_version": 2,
    "name": "Block Sponsor Comments",
    "version": "1.4.0",
    "description": "Browser extension to remove sponsors from youtube descriptions and comments.",
    "permissions": [
        "*://*.youtube.com/*"
    ],
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["blocker.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "*.json"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}